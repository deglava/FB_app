<div id="Signup_Form">

<h1>Sign up</h1>
  <h2>It's free. And always will be.</h2>
</br>


<div id="labeltext">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <p>
    <%= f.text_field :Fname, :placeholder => 'First Name', autofocus: true %>
    <%= f.text_field :Lname, :placeholder => 'Last Name', autofocus: true %>
      </p>

    <p>
      <%= f.email_field :email, :style => "width:407px", :placeholder => 'Email', autofocus: true %>
    </p>

    <p>
      <%= f.label :password %>
      <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <br/>
      <%= f.password_field :password, :style => "width:407px", autocomplete: "off" %>
    </p>

    <p>
      <%= f.password_field :password_confirmation, :placeholder => 'Password Confirmation', :style => "width:407px", autocomplete: "off" %>
    </p>


    <p>
    <%= f.label "Birthday"%>
    </br>
    <%= f.date_select :DOB, start_year: 1920, end_year: 2015, default: 18.years.ago, autofocus: true %>
  </p>

    <p>
      <%= f.radio_button :gender, 'Female'%>
      <%= f.label :female %>
      <%= f.radio_button :gender, 'Male'%>
      <%= f.label :male %>
    </p>

  </div>
    <p>
    <%= f.submit "Sign up" %>
    </p>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

</div>