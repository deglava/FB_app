<div id="dashboard">

  <div class="row">
    <div class="col-lg-3">
      <%= render 'dashboard/user_info' %>
    </div>

    <div class="col-lg-6">
      <div class="well">

    <%if @user == current_user%>

            <%=form_for :user, :url=>{:action=>"changeStatus", :id=>current_user} do |f|%>
                <div class="form-group">
                  <h4>Update Status</h4>
                  <%= f.text_area :Status, class: 'form-control', autofocus: true, placeholder: 'What\'s up?' %>
                </div>

                <div class="form-group">
                  <%= f.submit 'Post', class: 'btn btn-primary'%>
                </div>
            <% end %>


    <%else%>


            <%=form_for :user, :url=>{:action=>"changeStatus", :id=>current_user} do |f|%>
                <div class="form-group">
                  <h4>Current Status</h4>
                  <%= f.text_area :Status, class: 'form-control', autofocus: true, disabled: true, placeholder: 'What\'s up?' %>
                </div>
            <% end %>

    <%end%>

        <%=form_for :timeline, :url=>{:action=>"addevent", :id=>@user} do |f|%>
            <div class="form-group">
              <h4>Add new post</h4>
              <%= f.text_area :post, class: 'form-control', autofocus: true, placeholder: 'What\'s up?' %>
            </div>

            <div class="form-group">
              <%= f.submit 'Post', class: 'btn btn-primary'%>
            </div>
        <% end %>

      </div>
    </div>

    <div class="col-lg-3">
      <%= render 'dashboard/right_panel' %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-3">
    </div>

    <div id="newsfeed" class="col-lg-6">
      <div class="well">
        <div class="content">
          <h5>
            <%= current_user.Status%>
          </h5>

          </div>
    </div>
    </div>

    <div class="col-lg-3">
    </div>

</div>
</div>
